<%= form_with(model: [ @article, @article.comments.build ], remote: true) do |form| %>
  
  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body ,:class=>"form-control"%>
  </p>
  
  <%if user_signed_in? %>
    <p>Commenting as <strong><%= current_user.email %></strong></p>  
  <%end%>
  
  <p>
    <%= form.submit  :class=>"btn btn-primary"%>
  </p>
<% end %>